<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    tools:context=".GraphDataGraph">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/GraphTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                style="@style/MediumTextTitle"
                 />

            <TextView
                android:id="@+id/DailyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/GraphTitleText"
                style="@style/MediumTextTitle"
                android:text=""
                />

            <TextView
                android:id="@+id/WeeklyBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                style="@style/MediumTextTitle"
                android:layout_below="@id/DailyText"
                android:layout_centerHorizontal="true"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/WeekBarChart"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_below="@id/WeeklyBarText"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/MonthlyLineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                style="@style/MediumTextTitle"
                android:layout_below="@id/WeekBarChart"
                android:layout_centerHorizontal="true"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/MonthLineGraph"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_below="@id/MonthlyLineText"
                android:layout_centerHorizontal="true"
                />





            <TextView
                android:id="@+id/WeeklyBarText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                style="@style/MediumTextTitle"
                android:layout_below="@id/MonthLineGraph"
                android:layout_centerHorizontal="true"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/WeekBarChart2"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_below="@id/WeeklyBarText2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/MonthlyLineText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                style="@style/MediumTextTitle"
                android:layout_below="@id/WeekBarChart2"
                android:layout_centerHorizontal="true"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/MonthLineGraph2"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_below="@id/MonthlyLineText2"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>